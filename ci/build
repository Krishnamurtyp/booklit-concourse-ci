#!/usr/bin/env bass

(def [ref version]
  (case *args*
    []  ["HEAD" "0.0.0-dev"]
    [r] [r "0.0.0-dev"]
    _   *args*))

(def project
  (load (*dir*/../project)))

(def booklit
  (load (*dir*/booklit)))

(defn final-inspection [bin]
  (from (linux/ubuntu)
    ($ ls -alh $bin)
    ($ ldd $bin)
    ($ $bin --version)))

(let [src (booklit:checkout ref)
      binaries (project:build-all src version)]
  (run (final-inspection binaries:linux))
  (emit binaries *stdout*))
